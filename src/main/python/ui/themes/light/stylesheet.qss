/* MENU COLORS */
QHeaderView {
   font-size:9pt;
}
QMenuBar {
	background-color: rgb(51, 51, 51);
	color: rgb(237, 237, 237);
   font-size:12pt;
}

QMenuBar::item:selected {
	background-color: rgb(30, 129, 169);
	color: rgb(237, 237, 237);
}

QMenu {
   background-color: rgb(51, 51, 51);
	color: rgb(237, 237, 237);
   border: 1px solid rgb(79, 79, 79);
   font-size:12pt;
 }

QMenu::item:selected {
   background-color: rgb(30, 129, 169);
	color: rgb(237, 237, 237);
 }

QMenu::separator {
	height: 1px;
	margin: 2px 2px 2px 2px;
	color:rgb(237, 237, 237);
	background-color: rgb(79, 79, 79);
 }
 
QWidget[accessibleName="task_main"] {
    background-color: rgb(226, 235, 240);
}

 /* QToolBox*/
 /*For some reason this one is necessary to make the next one work...*/
 QToolBox QScrollArea>QWidget>QWidget {
   background-color:	rgb(255, 255, 255);
   padding:0;
   margin:0;
}

QToolBox QScrollArea {
   padding-top:0px;
   margin-top:0px;
   background-color:	rgb(226, 235, 240);
   border: 0px solid rgb(179, 179, 179);
   border-top-width: 0px;
   border-left-width: 0px;
   border-right-width: 0px;
   border-bottom-width: 0px;
   
   border-top-left-radius :0px;
   border-top-right-radius :0px;
   border-bottom-left-radius :10px;
   border-bottom-right-radius :10px;
}

QToolBox::tab {
 	background-color: rgb(226, 235, 240);
   border-radius: 10px;
   border: 0px solid rgb(179, 179, 179);
}

QToolBox::tab:first {
	font-size:12pt;
	font-weight:bold;
}

QToolBox::tab:selected {
	background-color: rgb(30, 129, 169);
	color: rgb(247, 250, 251);
   border-top: none;
   border-top-left-radius :10px;
   border-top-right-radius :10px;
   border-bottom-left-radius :0px;
   border-bottom-right-radius :0px;
   border: 0px;
}

QToolBox::tab:hover {
	background-color: rgb(30, 129, 169);
	color: rgb(247, 250, 251);
}

